<Window x:Class="CreatePipe.Form.ProgressBarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePipe.Form"
        mc:Ignorable="d"
        Title="ProgressBarDialog" Height="100" Width="500" Background="Transparent"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <ProgressBar Height="20" Maximum="{Binding Maximum}"
                         Value="{Binding Value}"/>
            <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" FontWeight="Black" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
