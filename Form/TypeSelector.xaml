<Window x:Class="CreatePipe.Form.TypeSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePipe.Form"
        mc:Ignorable="d" Width="280" Height="160"
        >
    <Grid>
        <StackPanel Orientation="Vertical" Margin="5" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="基础桥架类型" VerticalAlignment="Center"></TextBlock>
                <ComboBox Name="typecombo" Width="150"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="新类型名称" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                    <TextBox Name="typeName" Text="新类型名称" Width="90" VerticalAlignment="Center" HorizontalContentAlignment="Center"></TextBox>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="桥架注释"></TextBlock>
                <TextBox Text="类型注释" Name="noteText" Width="90" HorizontalContentAlignment="Center"></TextBox>
            </StackPanel>
            <Button Content="确定" Width="50" Margin="5,0,20,0" HorizontalAlignment="Right"></Button>
        </StackPanel>
    </Grid>
</Window>
