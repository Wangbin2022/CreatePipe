<Window x:Class="CreatePipe.Form.UniversalComboBoxMultiSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePipe.Form"
        mc:Ignorable="d"
        Title="UniversalComboBoxMultiSelection" 
        Height="140" Width="280" Topmost="True"
        WindowStartupLocation="CenterScreen" 
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5">选项列表：</TextBlock>
        <local:MultiSelectComboBox Grid.Column="1" Margin="5" 
                                   VerticalAlignment="Center" 
            ItemsSource="{Binding Datasource}" 
  SelectedItems="{Binding SelectedItems}"  /> 
        <TextBlock Grid.Row="1" Text="{Binding DisplayText}"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Grid.ColumnSpan="2" Width="180"/>
        <Button Grid.Row="2" Margin="5" Grid.ColumnSpan="2"
                Content="确认" x:Name="btn_OK" 
                Command="{Binding ResultExportCommand}" 
                Click="Button_Click"/>
    </Grid>
</Window>
