<Window x:Class="CreatePipe.Form.OverView1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="交建蓝盾 - 中交网安" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- 左侧导航栏RadioButton样式 -->
        <Style x:Key="NavRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 选中状态的红色指示条 -->
                                <Border x:Name="Indicator" Grid.Column="0" Width="4" Height="40" Background="Transparent" 
                                        CornerRadius="2" VerticalAlignment="Center" Margin="-15,0,10,0"/>

                                <ContentPresenter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="#D9534F"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="RadioButton">
                                <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border x:Name="Indicator" Grid.Column="0" Width="4" Height="40" Background="#D9534F" 
                                                CornerRadius="2" VerticalAlignment="Center" Margin="-15,0,10,0"/>
                                        <ContentPresenter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 卡片容器样式 -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- 链接式按钮样式 -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <!--<Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextElement.TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>-->
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <!-- 左侧导航栏 -->
            <ColumnDefinition Width="*"/>
            <!-- 右侧主内容区 -->
        </Grid.ColumnDefinitions>

        <!-- 1. 左侧导航栏 -->
        <Border Grid.Column="0" Background="#ECECEC" BorderBrush="#D0D0D0" BorderThickness="0,0,1,0">
            <StackPanel>
                <RadioButton GroupName="Navigation" IsChecked="True" Style="{StaticResource NavRadioButtonStyle}">
                    <StackPanel>
                        <Path Data="M3,2 L13,2 L13,4 L3,4 Z M3,6 L13,6 L13,8 L3,8 Z M3,10 L13,10 L13,12 L3,12 Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}" 
                              Height="24" Stretch="Uniform" Margin="0,0,0,5"/>
                        <TextBlock Text="概览" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}">
                    <!--<StackPanel>
                        <Path Data="M8,1 L12,5 L8,9 L7,8 L9,6 L1,6 L1,5 L9,5 L7,3 Z M0,0 H16 V16 H0 Z" FillRule="EvenOdd"
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}" 
                              Height="24" Stretch="Uniform" Margin="0,0,0,5"/>
                        <TextBlock Text="病毒查杀" HorizontalAlignment="Center"/>
                    </StackPanel>-->
                </RadioButton>
                <RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}">
                    <StackPanel>
                        <Path Data="M2,2 L14,2 L14,12 L8,16 L2,12 Z M8,4 L12,7 L8,10 L4,7 Z" 
                              Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}" 
                              Height="24" Stretch="Uniform" Margin="0,0,0,5"/>
                        <TextBlock Text="实时防护" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>

                <Border Height="1" Background="#D0D0D0" Margin="10"/>

                <RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}">
                    <StackPanel>
                        <Path Data="M3,2 L13,2 L13,14 L3,14 Z M5,4 H11 M5,6 H11 M5,8 H9 M5,10 H9" Stroke="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}" 
                              StrokeThickness="1" Height="24" Stretch="Uniform" Margin="0,0,0,5"/>
                        <TextBlock Text="日志" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton GroupName="Navigation" Style="{StaticResource NavRadioButtonStyle}">
                    <StackPanel>
                        <Path Data="M8,0 A8,8 0 1 1 7.9,0 M8,4 V9 M8,11.5 H8.1" Stroke="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}" 
                              StrokeThickness="1.5" Height="24" Stretch="Uniform" Margin="0,0,0,5"/>
                        <TextBlock Text="关于" HorizontalAlignment="Center"/>
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

        <!-- 2. 右侧主内容区 -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- 顶部欢迎横幅 -->
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- 盾牌图标 -->
                        <Path Data="M8,0 L0,3 V9 C0,14 8,16 8,16 C8,16 16,14 16,9 V3 L8,0 Z M7,11 L4,8 L5,7 L7,9 L11,5 L12,6 Z" 
                              Fill="LightGreen" Height="50" Stretch="Uniform"/>
                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="您的计算机正受到保护" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                            <TextBlock Text="全面检测，快速响应，随时随地远离威胁" FontSize="14" Foreground="Gray"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" TextElement.FontSize="12">
                        <TextBlock Text="Agent版本: 2.7.0.1500" Foreground="Gray"/>
                        <Button Content="检查更新" Style="{StaticResource LinkButtonStyle}" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <!-- 仪表盘卡片网格 -->
                <UniformGrid Columns="3" Rows="1" Margin="0,20,0,0">
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="正在保护" Foreground="Gray"/>
                            <UniformGrid Columns="2" Margin="0,15,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <!-- 进程图标 -->
                                    <Path Data="M2,2 H10 V6 H2 Z M1,8 H11 M4,12 L8,8 L12,12" Stroke="#D9534F" StrokeThickness="1.5" Height="24"/>
                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock Text="进程" Foreground="Gray"/>
                                        <TextBlock Text="336" FontSize="28" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <!-- 服务图标 -->
                                    <Path Data="M0,4 H16 M8,0 V8 M3,9 A5,5 0 1 1 13,9" Stroke="#D9534F" StrokeThickness="1.5" Height="24"/>
                                    <StackPanel Margin="10,0,0,0">
                                        <TextBlock Text="服务" Foreground="Gray"/>
                                        <TextBlock Text="137" FontSize="28" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                            </UniformGrid>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="近15分钟已检测" Foreground="Gray"/>
                            <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                <!-- 文件图标 -->
                                <Path Data="M1,2 H7 L9,4 H15 V14 H1 Z" Stroke="#666" StrokeThickness="1.5" Height="24"/>
                                <StackPanel Margin="10,0,0,0">
                                    <TextBlock Text="文件" Foreground="Gray"/>
                                    <TextBlock Text="42" FontSize="28" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <Grid>
                                <TextBlock Text="终端登记" Foreground="Gray"/>
                                <Button Content="重新登记" Style="{StaticResource LinkButtonStyle}" HorizontalAlignment="Right"/>
                            </Grid>
                            <StackPanel Margin="0,15,0,0">
                                <TextBlock Text="终端使用人: 王斌" Margin="0,0,0,5"/>
                                <TextBlock Text="手机: 13366566364"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1">
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="活动" Foreground="Gray"/>
                            <!-- 活动列表 -->
                            <ItemsControl Margin="0,15,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Ellipse Width="10" Height="10" Fill="#007ACC" VerticalAlignment="Center" Margin="5,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding EventName}" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="{Binding Timestamp}" Foreground="Gray" FontSize="11"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <!-- 示例数据，实际应绑定 -->
                                <StackPanel>
                                    <TextBlock Text="病毒库已更新" x:Name="EventName"/>
                                    <TextBlock Text="2025/09/29 07:41:16" x:Name="Timestamp"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="病毒库已更新" x:Name="EventName1"/>
                                    <TextBlock Text="2025/09/29 03:09:15" x:Name="Timestamp1"/>
                                </StackPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel>
                            <TextBlock Text="已启用模块" Foreground="Gray"/>
                            <!-- 模块列表 -->
                            <ItemsControl Margin="0,15,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,3">
                                            <Path Data="M4,8 L7,11 L12,5" Stroke="Green" StrokeThickness="2" Width="16" Height="16"/>
                                            <TextBlock Text="{Binding ModuleName}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <!-- 示例数据 -->
                                <StackPanel>
                                    <TextBlock Text="攻击面收敛模块" x:Name="ModuleName"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="终端检测与响应模块" x:Name="ModuleName1"/>
                                </StackPanel>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- 底部功能区 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,20,10,0">
                    <Button Style="{StaticResource LinkButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M2,2 H14 V14 H2 Z M5,5 H11 V11 H5 Z" Fill="#666" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="隔离区"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource LinkButtonStyle}" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M2,2 H14 V14 H2 Z M7,5 L9,5 L9,7 L11,7 L11,9 L9,9 L9,11 L7,11 L7,9 L5,9 L5,7 L7,7 Z" Fill="#666" Height="14" Margin="0,0,5,0"/>
                            <TextBlock Text="信任区"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
