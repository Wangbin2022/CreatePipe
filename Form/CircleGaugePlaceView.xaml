<Window x:Class="CreatePipe.Form.CircleGaugePlaceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePipe.Form"
        mc:Ignorable="d"
        Title="CircleGaugePlaceView" 
        Height="300" Width="240" ResizeMode="NoResize" Topmost="True">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="5">
            <Button  Content="选取环形自适应族，注意方向" Height="20" 
                     Command="{Binding GetAdaptiveCircleCommand}"
                     HorizontalAlignment="Stretch"/>
        </DockPanel>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" Height="30" Margin="5,0">
                <TextBlock Width="88" Text="沟宽度"  VerticalAlignment="Center"/>
                <TextBox Width="115" Text="{Binding GaugeWidth}" 
                          FlowDirection="RightToLeft"
                         HorizontalAlignment="Right" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="5,0">
                <TextBlock Width="88" Text="沟高度"  VerticalAlignment="Center"/>
                <TextBox Width="115" Text="{Binding GaugeHeight}" 
                          FlowDirection="RightToLeft"
                         HorizontalAlignment="Right" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="5,0">
                <TextBlock Width="88" Text="沟壁厚度"  VerticalAlignment="Center"/>
                <TextBox Width="115" Text="{Binding GaugeWallThick}" 
                          FlowDirection="RightToLeft"
                         HorizontalAlignment="Right" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="30" Margin="5,0">
                <TextBlock Width="188" Text="是否设垫层（厚100，外出50）"  VerticalAlignment="Center"/>
                <CheckBox  IsChecked="{Binding HasBase, Mode=TwoWay}" 
                  VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>
        <DockPanel Grid.Row="2" Margin="5">
            <Button  Content="放置并退出" Height="20" IsDefault="True"
                     Command="{Binding PlaceGaugeCommand}"
                     HorizontalAlignment="Stretch" Click="btn_OK_Click"/>
        </DockPanel>
    </Grid>
</Window>
