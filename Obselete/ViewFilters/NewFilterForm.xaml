<Window x:Class="CreatePipe.ViewFilters.NewFilterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePipe.ViewFilters"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="NewFilterForm" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="新过滤器名称"   Grid.Row="0" Margin="5"
                  HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox Margin="5"   Grid.Row="1"  
                 x:Name="newFilterNameTextBox"/>
        <TextBlock Text="仅支持过滤器生成，规则设置请返回视图—过滤器—修改"   Grid.Row="2" Margin="5" TextWrapping="Wrap"
                  HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button Content="OK" Grid.Row="3"   Grid.ColumnSpan="3" Margin="5"
                x:Name="okButton" Click="okButton_Click"/>
    </Grid>
</Window>
