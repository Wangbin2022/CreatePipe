<Window x:Class="CreatePipe.TurnOver.TurnOverForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CreatePipe.TurnOver"
             mc:Ignorable="d" d:DesignHeight="150" d:DesignWidth="350" Title="翻弯" 
        
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"  
        ResizeMode="NoResize" Closing="Window_Closing"  >

    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="30,10,0,10">
            <Label Content="翻弯高度(mm):"/>
            <TextBox Width="200" Name="turnOverHeight_tb" Text="1000"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="30,10,0,10">
            <Label Content="角            度(°):"/>
            <TextBox Width="200" Name="angle_tb" Text="90"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="点击两点翻弯" Width="100" Click="Button_Click"/>
            <Button Content="保 存 并 退 出" Width="100" Margin="10,0,0,0" Click="Button_Click2"/>
        </StackPanel>
    </StackPanel>

</Window>

