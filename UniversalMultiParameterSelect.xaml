<Window x:Class="CreatePipe.UniversalMultiParameterSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreatePipe"
        mc:Ignorable="d"
        Title="选择参数" 
        Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="请选择要导出的参数:" Margin="0,0,0,10"/>

        <ListView Grid.Row="1" x:Name="ParametersListView" SelectionMode="Multiple">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" 
                              Margin="2"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="2" x:Name="SelectionCountText" Margin="0,10,0,5"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="确定" Click="Ok_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="取消" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
